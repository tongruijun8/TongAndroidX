<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tswitch_rl"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/tswitch_ll"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:background="@drawable/tswitch"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tswitch_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tswitch_left_select"
            android:gravity="center"
            android:text="已签到"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tswitch_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tswitch_right_"
            android:gravity="center"
            android:text="未签到"
            android:textColor="#333333" />

    </LinearLayout>
</RelativeLayout>