<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_t_bg"
    >

    <TextView
        android:id="@+id/dialog_t_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5dp"
        android:text="接单后随意取消订单会有相应惩罚，是否确认接单？"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:padding="16dp"
        />

    <CheckBox
        android:id="@+id/dialog_t_checkbox"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="下次不再提示"
        android:textSize="14sp"
        android:textColor="@color/dialog_textcolor_ts"
        android:visibility="visible"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dialog_line_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/dialog_t_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textSize="16sp"
            android:textColor="@color/dialog_textcolor"
            android:enabled="true"
            android:clickable="true"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dialog_line_bg"/>
        <TextView
            android:id="@+id/dialog_t_affirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认"
            android:textSize="16sp"
            android:textColor="@color/dialog_textcolor"
            android:enabled="true"
            android:clickable="true"
            />

    </LinearLayout>

</LinearLayout>